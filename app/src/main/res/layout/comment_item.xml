<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/comment_author_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dheeraj Bhatia"
            android:id="@+id/comment_name"
            android:textSize="@dimen/comment_author_name_size"
            android:paddingLeft="5dp"
            android:textColor="@color/text_secondary"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/comment_author_icon"
            android:layout_toEndOf="@+id/comment_author_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_text"
            android:paddingLeft="5dp"
            android:text="realyyyy awesomeee !!!!!!!!!!!!!"
            android:textColor="@color/text_primary"
            android:layout_below="@+id/comment_name"
            android:layout_alignLeft="@+id/comment_name"
            android:layout_alignStart="@+id/comment_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_time"
            android:text=" 5days ago"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
<View android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider"/>
</LinearLayout>